<% layout('layouts/boilerplate') %>
<div class="container justify-content-center align-items-center mt-5">
  <div class="row">
    <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
      <div class="card shadow mb-5" style="background-color: #faf9f5">
        <div
          class="container justify-content-center align-items-center"
          style="width: 50%; height: 50%"
        >
          <img
            src="https://img.freepik.com/free-vector/into-wild-background_1284-15847.jpg?size=338&ext=jpg"
            alt=""
            class="card-img"
          />
        </div>
        <div class="card-body">
          <h5 class="card-title text-center">Login</h5>
          <form action="/login" method="POST" class="validated-form" novalidate>
            <div class="mb-3">
              <label for="username" class="form-label">Username</label>
              <input
                type="text"
                class="form-control"
                id="username"
                name="username"
                autofocus
                required
              />
              <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
              <label for="password" class="form-label">Password</label>
              <input
                type="password"
                class="form-control"
                id="password"
                name="password"
                required
              />
              <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="text-center">
              <div class="pb-2">
                <button class="btn btn-success">Login</button>
              </div>
              <div>
                <span>
                  <a href="/register" class="text-muted"
                    >Don't have an account?</a
                  >
                </span>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
